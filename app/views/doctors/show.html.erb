<h2> <%= @doctor.name %>, <%= @doctor.department %> </h2>

<h3> Appointments: </h3>
<ul>
  <% @doctor.appointments.each do |appointment| %>
  <li> <%= link_to appointment.patient.name, patient_path(appointment.patient) %>, <%= appointment.appointment_datetime.to_formatted_s(:long_ordinal) %> </li>
  <%end %>
</ul>
